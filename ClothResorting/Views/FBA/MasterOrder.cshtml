
@{
    ViewBag.Title = "MasterOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FBA System</h1>
<h2>Master Order Page</h2>

<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <div>
        <input id="btn-master" type="button" class="btn btn-primary" value="Creat new master order" />
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Grand No.</th>
                    <th>Container No.</th>
                    <th>Total CBM</th>
                    <th>Total Ctns</th>
                    <th>Actual CBM</th>
                    <th>Actual Ctns</th>
                    <th>Actual Plts</th>
                    <th>Inbound Date</th>
                    <th>ETA</th>
                    <th>Status</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="iframe">
    <div style="margin-top:20px;margin-right:20px;text-align:right">
        <text>CARRIER: <input id='input-carrier' style='width:170px;margin-top:20px' class='input-sm'/></text><br />
        <text>VESSEL: <input id='input-vessel' style='width:170px;margin-top:20px' class='input-sm'/></text><br />
        <text>VOY: <input id='input-voy' style='width:170px;margin-top:20px' class='input-sm'/></text><br />
        <text>ETA: <input id='input-eta' type="date" style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>ETD: <input id='input-etd' type="date" style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>ETA PORT: <input id='input-etaPort' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>PLACE OF RECEIPT: <input id='input-receipt' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>PORT OF LOADING: <input id='input-pol' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>PORT OF DISCHARGE: <input id='input-pod' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>PLACE OF DELIVERY: <input id='input-delivery' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>CONTAINER NO.: <input id='input-container' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>SEAL NO.: <input id='input-seal' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <text>CONTAINER SIZE: <input id='input-size' style='width:170px;margin-top:20px' class='input-sm' /></text><br />
        <button id="btn-new" class='btn btn-primary' style="margin-top:20px">Create</button>
    </div>
</div>
<div class="iframe-info">
    <div style="text-align:right;margin-right:20px">
        <text>Container #: <input id="input-updatecontainer" type="text" class="input-sm" style="margin-top:20px;width:170px" /></text><br />
        <text>Inbound Date: <input id="input-date" type="date" class="input-sm" style="margin-top:20px;width:170px" /></text><br />
        <button id="btn-updateinfo" class="btn btn-primary" style="margin-top:20px">Update</button>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            var index;
            var table;
            var url;
            var grandNumber;

            $(".iframe").hide();
            $(".iframe-info").hide();

            //解析url中的参数函数
            function getUrlParameter(sParam) {
                var sPageURL = decodeURIComponent(window.location.search.substring(1)),
                    sURLVariables = sPageURL.split('&'),
                    sParameterName,
                    i;

                for (i = 0; i < sURLVariables.length; i++) {
                    sParameterName = sURLVariables[i].split('=');

                    if (sParameterName[0] === sParam) {
                        return sParameterName[1] === undefined ? true : sParameterName[1];
                    }
                }
            };

            var customerId = getUrlParameter('customerId');

            //获取客户Id对应的所有总单
            url = "/api/fba/fbamasterorder/" + customerId;
            GetAjaxTable("GET", url);

            //点击新建主单按钮，打开新建主单弹窗
            $("#btn-master").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["450px", "750px"],
                    content: $(".iframe")
                });
            });

            //点击新建按钮，为当前客户新建一个主单
            $("#btn-new").on("click", function () {
                var carrier = $("#input-carrier").val().toString();
                var vessel = $("#input-vessel").val().toString();
                var voy = $("#input-voy").val().toString();
                var eta = $("#input-eta").val().toString();
                var etd = $("#input-etd").val().toString();
                var etaPort = $("#input-etaPort").val().toString();
                var placeOfReceipt = $("#input-receipt").val().toString();
                var portOfLoading = $("#input-pol").val().toString();
                var portOfDischarge = $("#input-pod").val().toString();
                var placeOfDelivery = $("#input-delivery").val().toString();
                var container = $("#input-container").val().toString();
                var sealNumber = $("#input-seal").val().toString();
                var containerSize = $("#input-size").val().toString();

                var obj = {
                    "carrier": carrier,
                    "vessel": vessel,
                    "voy": voy,
                    "eta": eta,
                    "etd": etd,
                    "etaPort": etaPort,
                    "placeOfReceipt": placeOfReceipt,
                    "portOfLoading": portOfLoading,
                    "portOfDischarge": portOfDischarge,
                    "placeOfDelivery": placeOfDelivery,
                    "container": container,
                    "sealNumber": sealNumber,
                    "containerSize": containerSize
                };

                url = "/api/fba/fbamasterorder/" + customerId;

                SendAjaxMethod("POST", url, obj);
            });

            //点击管理总单按钮，进入所选总单的细节页面
            $("#table").on("click", ".btn-manage", function () {
                var grandNumber = $(this).attr('iid');
                $(window.location).attr('href', '/fba/MasterDetail/?grandNumber=' + grandNumber);
            });

            //点击各个条目的Update Info按钮打开更新信息弹窗
            $("#table").on("click", ".btn-update", function () {
                masterOrderId = $(this).attr('iid');
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["400px", "200px"],
                    content: $(".iframe-info")
                });
            });

            //点击Update按钮更新信息
            $("#btn-updateinfo").on("click", function () {
                var container = $("#input-updatecontainer").val();
                var inboundDate = $("#input-date").val();

                url = "/api/fba/FBAMasterOrder/?masterOrderId=" + masterOrderId + "&container=" + container + "&inboundDate=" + inboundDate;
                var obj = {};
                SendAjaxMethod("PUT", url, obj);
            });

            function GetAjaxTable(methodType, url) {
                $.ajax({
                    type: methodType,
                    url: url,
                    contentType: 'application/json; charset=utf-8',
                    dataType: "json",
                    beforeSend: function () {
                        index = layer.msg('Processing...', {
                            icon: 1,
                            shade: 0.01,
                            time: 99 * 1000
                        });
                    },
                    success: function (data) {
                        layer.close(index);
                        if (table) {
                            table.destroy();
                        }

                        table = $("#table").DataTable({
                            data: data,
                            destroy: true,
                            //scrollX: true,
                            order: [[1, "asc"]],
                            scrollCollapse: true,
                            scrollY: "600px",
                            iDisplayLength: 100,
                            columns: [
                                {
                                    data: "id",
                                    render: function (data) {
                                        return "<text>" + data + "</text>";
                                    }
                                },
                                {
                                    data: "grandNumber",
                                    render: function (data) {
                                        return "<text>" + data + "</text>";
                                    }
                                },
                                {
                                    data: "container",
                                    render: function (data) {
                                        return "<text>" + data + "</text>";
                                    }
                                },
                                {
                                    data: "totalCBM",
                                    render: function (data) {
                                        return "<font color='green'>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "totalCtns",
                                    render: function (data) {
                                        return "<font color='green'>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "actualCBM",
                                    render: function (data) {
                                        return "<font color='red'>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "actualCtns",
                                    render: function (data) {
                                        return "<font color='red'>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "actualPlts",
                                    render: function (data) {
                                        return "<font color='red'>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "inboundDate",
                                    render: function (data) {
                                        if (data == "1969-12-31T16:00:00")
                                            return "<font color='red'>Unreceived</font>"
                                        else
                                            return "<font>" + data.substring(0, 10) + "</font>";
                                    }
                                },
                                {
                                    data: "eta",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "status",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "grandNumber",
                                    render: function (data) {
                                        return "<button iid='" + data + "' class='btn btn-link btn-update'>Update Info</button><button iid='" + data + "' class='btn btn-link btn-manage'>Manage</button>";
                                    }
                                }
                            ]
                        });
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        layer.alert(XMLHttpRequest.responseJSON.exceptionMessage, function () {
                            window.location.reload();
                        });
                    }
                });
            };

            function SendAjaxMethod(methodType, url, obj) {
                $.ajax({
                    type: methodType,
                    url: url,
                    contentType: 'application/json; charset=utf-8',
                    dataType: "json",
                    data: JSON.stringify(obj),
                    beforeSend: function () {
                        index = layer.msg('Processing...', {
                            icon: 1,
                            shade: 0.01,
                            time: 99 * 1000
                        });
                    },
                    success: function (data) {
                        layer.alert("Success!", function () {
                            window.location.reload();
                        })
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        layer.alert(XMLHttpRequest.responseJSON.exceptionMessage, function () {
                            window.location.reload();
                        });
                    }
                });
            };

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });
        });
    </script>
}