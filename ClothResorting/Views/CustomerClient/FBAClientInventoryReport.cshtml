
@{
    ViewBag.Title = "FBAClientInventoryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FBA System</h1>
<h2>FBA Inventory Report Page</h2>
<h2 id="h2-customer"></h2>

<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <div>
        <button id="btn-download" class="btn btn-primary">Download Report</button>
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Container</th>
                    <th>Type</th>
                    <th>FBA ID/SKU</th>
                    <th>Amz ID</th>
                    <th>Whse Code</th>
                    <th>GW(kg)/Ctn</th>
                    <th>CBM/Ctn</th>
                    <th>Received Ctns</th>
                    <th>Residual Ctns</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            var index;
            var url;
            var table;
            var customerCode;
            var closeDate;

            customerCode = getUrlParameter('customerCode');
            closeDate = getUrlParameter('closeDate');

            if (closeDate != "" && customerCode != "") {

                $("#h2-customer").html("Customer: " + customerCode);

                url = "/api/fba/fbainventoryindex/?customerCode=" + customerCode + "&closeDate=" + closeDate  + "&operation=Get";
                var columsArray = [
                    {
                        data: "container",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "type",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "shipmentId",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "amzRefId",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "warehouseCode",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "grossWeightPerCtn",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "cbmPerCtn",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "originalQuantity",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "residualQuantity",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "location",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    }
                ];

                GetAjaxTable("GET", url, "#table", table, columsArray);
            }
            else {
                alert("Need close date.");
            };

            //点击下载按钮,下载Excel库存报告
            $("#btn-download").on("click", function () {
                $(window.location).attr('href', '/api/fba/FBAInventoryIndex/?customerCode=' + customerCode + "&closeDate=" + closeDate + "&operation=Download");
            });

            //解析url中的参数函数
            function getUrlParameter(sParam) {
                var sPageURL = decodeURIComponent(window.location.search.substring(1)),
                    sURLVariables = sPageURL.split('&'),
                    sParameterName,
                    i;

                for (i = 0; i < sURLVariables.length; i++) {
                    sParameterName = sURLVariables[i].split('=');

                    if (sParameterName[0] === sParam) {
                        return sParameterName[1] === undefined ? true : sParameterName[1];
                    }
                }
            };

            function GetAjaxTable(methodType, url, tableId, table, columsArray) {
                $.ajax({
                    type: methodType,
                    url: url,
                    contentType: 'application/json; charset=utf-8',
                    dataType: "json",
                    beforeSend: function () {
                        layer.close(index);
                        index = layer.msg('Processing...', {
                            icon: 1,
                            shade: 0.01,
                            time: 99 * 1000
                        });
                    },
                    success: function (data) {
                        layer.close(index);
                        if (table) {
                            table.destroy();
                        }

                        table = $(tableId).DataTable({
                            data: data,
                            destroy: true,
                            //scrollX: true,
                            order: [[1, "asc"]],
                            scrollCollapse: true,
                            scrollY: "600px",
                            iDisplayLength: 100,
                            columns: columsArray
                        });
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        layer.alert(XMLHttpRequest.responseJSON.exceptionMessage, function () {
                            window.location.reload();
                        });
                    }
                });
            };

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });
        });
    </script>
}