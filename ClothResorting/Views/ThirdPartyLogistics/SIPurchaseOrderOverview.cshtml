﻿
@{
    ViewBag.Title = "SIPurchaseOrderOverview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Third-party Logistics Distribution System</h1>
<h2>Purchase Order Overview</h2>
<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>PO#</th>
                    <th>Style#</th>
                    @*<th>Vol.</th>
                    <th>G.W.(lb)</th>
                    <th>N.W.(lb)</th>*@
                    <th>Order Type</th>
                    <th>Fcs Ctns</th>
                    <th>Rcp Ctns</th>
                    <th>Inv Ctns</th>
                    <th>Fcs Pcs</th>
                    <th>Rcp Pcs</th>
                    <th>Avl Pcs</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            var id = window.location.search;
            var preId = window.location.search.substr(1);
            var isReplenishment = true;

            var urlstring = "/api/Inventory/" + id.substr(1);

            $("#table").DataTable({
                ajax: {
                    url: urlstring,
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "purchaseOrder",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "style",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    //{
                    //    data: "cft",
                    //    render: function (data) {
                    //        return "<text>" + data + "</text>";
                    //    }
                    //},
                    //{
                    //    data: "grossWeight",
                    //    render: function (data) {
                    //        return "<text>" + data + "</text>";
                    //    }
                    //},
                    //{
                    //    data: "netWeight",
                    //    render: function (data) {
                    //        return "<text>" + data + "</text>";
                    //    }
                    //},
                    {
                        data: "orderType",
                        render: function (data) {
                            if (data == "Regular")
                            {
                                isReplenishment = false;
                            }
                            else if (data == "Replenishment")
                            {
                                isReplenishment = true;
                            }
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "packedCartons",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualReceived",
                        render: function (data) {
                            return "<font color='blue'>" + data + "</font>";
                        }
                    },
                    {
                        data: "available",
                        render: function (data) {
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "totalPcs",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualReceivedPcs",
                        render: function (data) {
                            return "<font color='blue'>" + data + "</font>";
                        }
                    },
                    {
                        data: "availablePcs",
                        render: function (data) {
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "purchaseOrder",
                        render: function (data) {
                            if (isReplenishment == true)
                            {
                                return "<a href='/ThirdPartyLogistics/CartonDetail/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Receiving</button></a><br>";
                                        //+ "<a href='/ThirdPartyLogistics/Location/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Allocating Location</button></a>"
                                        //+ "<a href='/ThirdPartyLogistics/LocationDetail/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Location Distribution</button></a>";
                            }
                            else
                            {
                                return "<a href='/ThirdPartyLogistics/CartonDetail/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Receiving</button></a><br>";
                                        //+ "<a href='/ThirdPartyLogistics/RegularLocationDetail/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Location Distribution</button></a>";
                            }

                        }
                    }
                ]
            });

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });

        });
    </script>
}
