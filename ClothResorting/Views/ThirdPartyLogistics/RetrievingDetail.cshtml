
@{
    ViewBag.Title = "RetrievingDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Third-party Logistics Distribution System</h1>
<h2>Retrieving Detail</h2>
<div>
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <div>
        <div>
            <font>
                PO Number:
                <input id="poNumber" style="width:100px" />
            </font>
            <font>
                Style:
                <input id="style" style="width:100px" />
            </font>
            <font>
                Color:
                <input id="color" style="width:100px" />
            </font>
            <font>
                Size:
                <input id="size" style="width:100px" />
            </font>
            <font>
                Grand Total:
                <input id="size" style="width:100px" />
            </font>
            <input id="btn-search" type="button" class="btn btn-info" value="Retrieve" />
        </div>
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Location</th>
                    <th>PO#</th>
                    <th>Style</th>
                    <th>Color</th>
                    <th>Size</th>
                    <th>Recieved date</th>
                    <th>Target Pcs</th>
                    <th>Is opened carton existed</th>>
                    <th>Quantity of cartons</th>
                    <th>Remark</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
