
@{
    ViewBag.Title = "NewBulkload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Bulkload</h2>
<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <input id="createbulkload" type="button" class="btn btn-info" value="Upload bulkload collection" />
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>PO#</th>
                    <th>Style#</th>
                    <th>Color</th>
                    <th>Size</th>
                    <th>Number of Ctns</th>
                    <th>Pcs QTY</th>
                    <th>Location</th>
                    <th>Inbound Date</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="iframe">
    <div>
        <input id="upload2" type="file" accept="xls/xlsx" />
    </div>
    <div>
        <input id="uploadfile" type="button" class="btn btn-default" value="上传文件" />
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            var table;

            $("#createbulkload").click(function () {
                layui.use("layer", function () {
                    var layer = layui.layer;

                    layer.open({
                        title: false,
                        type: 1,
                        shadeclose: true,
                        area: ["40%", "40%"],
                        content: $(".iframe")
                    });
                });
            })

            $("#uploadfile").on("click", function () {
                var formData = new FormData();
                var files = $("#upload2").get(0).files;

                if (files.length > 0) {
                    formData.append("fileName", files[0]);
                }

                $.ajax({
                    contentType: false,
                    cache: false,
                    processData: false,
                    type: "POST",
                    url: "/api/NewBulkload",
                    data: formData,
                    beforeSend: function () {
                        layui.use('layer', function () {
                            var layer = layui.layer;
                            layer.msg('Extracting files...', {
                                icon: 16,
                                shade: 0.01,
                                time: 99 * 1000
                            });;
                        });
                    },
                    success: function () {
                        //批量抽取散货成功后，返回刚刚抽取的记录
                        layer.alert("Extract successed!");
                        if (table != null) {
                            table.destroy();
                        }
                        table = $("#table").DataTable({
                            ajax: {
                                url: "/api/newbulkloadresults",
                                dataSrc: ""
                            },
                            columns: [
                                {
                                    data: "purchaseOrder",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "style",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "color",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "size",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "numberOfCartons",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "pcs",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "location",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                },
                                {
                                    data: "inboundDate",
                                    render: function (data) {
                                        return "<font>" + data + "</font>";
                                    }
                                }
                            ]
                        });
                    },
                    error: function () {
                        layer.alert("An error occured on the server!");
                    }
                });
                $(".iframe").hide();
            });

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });
        });
    </script>
}
