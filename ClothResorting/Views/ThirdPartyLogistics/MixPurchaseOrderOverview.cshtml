
@{
    ViewBag.Title = "MixPurchaseOrderOverview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Third-party Logistics Distribution System</h1>
<h2>Mix Purchase Order Overview</h2>

<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
        <input type="button" class="btn btn-primary btn-upload" value="Upload Packing List" />
        <input type="button" class="btn btn-primary btn-download" value="Download Packing List Template" />
        <button id="btn-bulk" class="btn btn-info">Create Bulk PO Summary</button>
        <input id="btn-replenishmentmenu" type="button" class="btn btn-info" value="Replenishment Menu" />
        <input id="btn-regularmenu" type="button" class="btn btn-info" value="Regular Menu" />
        <input id="btn-rcvall" type="button" class="btn btn-default btn-danger" value="Receiving all without problem." />
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th><input id="select-all" type="checkbox" value="0" /></th>
                    <th>Container</th>
                    <th>Vendor</th>
                    <th>Created By</th>
                    <th>PO</th>
                    <th>Style</th>
                    <th>Order Type</th>
                    <th>PO Line</th>
                    <th>Customer</th>
                    <th>Quantity</th>
                    <th>Received Pcs</th>
                    <th>Cartons</th>
                    <th>Received Ctns</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div>
        <input id="container" class="input-lg" placeholder="Assign Contrainer number" /> <button id="btn-confirm" class="btn btn-info">Comfirm</button>
    </div>
</div>
<div class="iframe">
    <div style="margin-top:20px;margin-right:20px;text-align:right">
        <text>Select vendor: </text>
        <select id="select-vendor" style="width:170px;height:30px"></select><br />
        <text>Select po type: </text>
        <select id="select-potype" style="width:170px;height:30px">
            <option value="Pre-pack">Pre-pack</option>
            <option value="Solid Pack">Solid Pack</option>
            <option value='Mix' style='width:170px;height:30px'>Mix</option>
            <option value="Replenishment">Replenishment</option>
        </select><br />
        <font color="red">*Note: Replenishment type cannot mix with any other types.</font><br />
        <input id="upload2" type="file" accept="xls/xlsx" style="margin-top:5px;margin-left:100px;width:200px" /><br />
        <input id="uploadppkfile" type="button" class="btn btn-primary" style="margin-top:5px" value="Upload Regular Packing List" /><br />
    </div>
</div>
<div class="iframe-download">
    <div style="margin-top:20px;text-align:center">
        <input id="download-silkicon" type="button" class="btn btn-primary" value="Download Packing List Template" /><br />
    </div>
</div>
<div class="iframe-replenishmentmenu">
    <div style="margin-top:15px;text-align:center">
        <button style="margin-top:10px" id="btn-generalallocate" class="btn btn-info">Allocate Replenishment Location</button><br />
        <button style="margin-top:10px" id="btn-pomanagement" class="btn btn-info">Manage Purchase Order</button>
    </div>
</div>
<div class="iframe-regularmenu">
    <div style="margin-top:15px;text-align:center">
        <input style="margin-top:10px" id="btn-allocate" type="button" class="btn btn-info" value="Allocate Regular location" /><br />
        <input style="margin-top:10px" id="btn-location" type="button" class="btn btn-info" value="View inventory" />
    </div>
</div>
<div class="iframe-create" style="margin-top:20px;margin-right:20px;text-align:right">
    <text>Purchase Order: </text><input id='input-po' style='width:170px' class='input-sm' placeholder='Cut PO' /><br />
    <text>Select PO Type: </text><select id='select-ordertype' style='width:170px;height:30px'>
        <option value='Pre-pack'>Pre-pack</option>
        <option value='Solid Pack' style='width:170px;height:30px'>Solid Pack</option>
        <option value='Mix' style='width:170px;height:30px'>Mix</option>
        <option value='Replenishment' style='width:170px;height:30px'>Replenishment</option>
    </select><br />
    <text>Style: </text><input id='input-style' style='width:170px' class='input-sm' placeholder='Style' /><br />
    <text>PO Line: </text><input id='input-poline' style='width:170px' class='input-sm' placeholder='PO Line' /><br />
    <text>Customer: </text><input id='input-customer' style='width:170px' class='input-sm' placeholder='Customer' /><br />
    <button id="btn-add" class='btn btn-primary' style="margin-top:10px">Add</button>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            $(".iframe").hide();
            $(".iframe-download").hide();
            $(".iframe-replenishmentmenu").hide();
            $(".iframe-regularmenu").hide();
            $(".iframe-create").hide();
            var quantity;

            //解析url中的参数函数
            function getUrlParameter(sParam) {
                var sPageURL = decodeURIComponent(window.location.search.substring(1)),
                    sURLVariables = sPageURL.split('&'),
                    sParameterName,
                    i;

                for (i = 0; i < sURLVariables.length; i++) {
                    sParameterName = sURLVariables[i].split('=');

                    if (sParameterName[0] === sParam) {
                        return sParameterName[1] === undefined ? true : sParameterName[1];
                    }
                }
            };

            //从地址栏获取参数
            var preId = getUrlParameter('preid');
            var vendor = getUrlParameter('vendor');

            var urlstring = "/api/fcpurchaseorderoverview/" + preId;

            $("#select-vendor").append("<option value='" + vendor + "'>" + vendor + "</option>");

            $("#table").DataTable({
                ajax: {
                    url: urlstring,
                    dataSrc: ""
                },
                scrollY: "600px",
                iDisplayLength: 100,
                scrollCollapse: true,
                columns: [
                    {
                        data: "id",
                        render: function (data) {
                            return "<input name='selected' type='checkbox' class='cb-selected' value='"
                                        + data + "' />";
                        }
                    },
                    {
                        data: "container",
                        render: function (data) {
                            return "<a href='/ThirdPartyLogistics/ReceivingReport/?preid=" + preId + "&container=" + data + "'><button class='btn btn-link btn-report'>" + data + "</button></a><br>";
                        }
                    },
                    {
                        data: "vendor",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "operator",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "purchaseOrder",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "style",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "orderType",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "poLine",
                        render: function (data) {
                            return "<font'>" + data + "</font>";
                        }
                    },
                    {
                        data: "customer",
                        render: function (data) {
                            return "<font color='blue'>" + data + "</font>";
                        }
                    },
                    {
                        data: "quantity",
                        render: function (data) {
                            quantity = data;
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualPcs",
                        render: function (data) {
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "cartons",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualCtns",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            if (quantity == 0)
                            {
                                return "<a href='/ThirdPartyLogistics/fcRegularCartonDetail/?" + data + "'><button class='btn btn-link'>Receiving</button></a><button id='" + data + "' class='btn btn-link btn-delete'>Delete</button><br>";
                            }
                            else
                            {
                                return "<a href='/ThirdPartyLogistics/fcRegularCartonDetail/?" + data + "'><button class='btn btn-link'>Receiving</button></a>";
                            }
                        }
                    }
                ]
            });

            //勾选全选选项，则选择所有对象
            $("#select-all").on("click", function () {
                if ($("#select-all").is(":checked")) {
                    $(".cb-selected").prop("checked", true);
                }
                else {
                    $(".cb-selected").prop("checked", false);
                }
            });

            //批量指定货柜号按钮
            $("#btn-confirm").on("click", function () {
                var button = $(this);
                var arr = new Array();
                var container = button.prev().val().toString();

                //将所有被选中的CheckBox的对象的id放到数组中
                $("input:checkbox[name='selected']:checked").each(function (i) {
                    var val = 0;
                    val = $(this).val();
                    arr.push(val);
                });

                if (container == "")
                {
                    alert("Please enter container number!");
                }
                else
                {
                    var obj = {
                        "arr": arr,
                        "container": container,
                        "preId": preId
                    };

                    //指定输入框中的值到所有被选中的对象的Container属性中
                    $.ajax({
                        type: "PUT",
                        url: "/api/fcpurchaseorderoverview/",
                        contentType: 'application/json; charset=utf-8',
                        data: JSON.stringify(obj),
                        dataType: "json",
                        success: function (data) {
                            alert("Update success!");
                            location.reload();
                        },
                        error: function () {
                            alert("An error occured!");
                        }
                    });
                }
            });

            //全装箱单正常收货
            $("#btn-rcvall").on("click", function () {
                $.ajax({
                    type: "PUT",
                    url: "/api/fcreceivingreport/" + preId,
                    contentType: 'application/json; charset=utf-8',
                    dataType: "json",
                    success: function () {
                        alert("Success!");
                        window.location.reload();
                    },
                    error: function () {
                        alert("Error!");
                    }
                });
            });

            //打开上传装箱单类型弹窗
            $(".btn-upload").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["400px", "200px"],
                    content: $(".iframe")
                });
            });

            //执行上传一般客户的Pre-pack装箱单、Solid Pack装箱单或Replenishment装箱单
            $("#uploadppkfile").on("click", function () {
                var formData = new FormData();
                var files = $("#upload2").get(0).files;
                var purchaseOrderType = $("#select-potype option:selected").val();

                if (files.length > 0) {
                    formData.append("fileName", files[0]);
                }

                $.ajax({
                    contentType: false,
                    cache: false,
                    processData: false,
                    type: "POST",
                    url: "/api/RegularPackingList/?preId=" + preId + "&vendor=" + vendor + "&purchaseOrderType=" + purchaseOrderType,
                    data: formData,
                    beforeSend: function () {
                        layer.close(index);
                        layer.msg('Extracting files...', {
                            icon: 1,
                            shade: 0.01,
                            time: 99 * 1000
                        });
                    },
                    success: function () {
                        layer.alert("Extract successed!", function () {
                            location.reload();
                        });
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        bootbox.alert(XMLHttpRequest.responseJSON.exceptionMessage, function () {
                            window.location.reload();
                        });
                    }
                });
                $(".iframe").hide();
            });

            //删除新加的散货PO
            $("#table").on("click", ".btn-delete", function () {
                var button = $(this);
                //var fcsPcs = button.parent().parent("tr").children('td').eq(7).children('font').html();
                //var isBulkPo = fcsPcs == 0 ? true : false;

                bootbox.confirm("Are you sure you want to delete this PO Summary?", function (result) {
                    if (result)
                    {
                        $.ajax({
                            type: "DELETE",
                            url: "/api/fcreceivingreport/" + button.attr('id'),
                            contentType: 'application/json; charset=utf-8',
                            dataType: "json",
                            success: function () {
                                alert("Delete success!");
                                window.location.reload();
                            },
                            error: function (XMLHttpRequest, textStatus, errorThrown) {
                                alert(XMLHttpRequest.responseJSON.exceptionMessage);
                                window.location.reload();
                            }
                        });
                    }
                });
            });

            //点击添加散货PO Summary，弹出表单对话框
            $("#btn-bulk").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["300px", "250px"],
                    content: $(".iframe-create")
                });
                button.replaceWith("<div><div>");
            });

            //点击Add按钮，添加数据到数据库，并且关闭刚才出现的散货表单，重新出现“添加散货”按钮，并出现一个撤销按钮
            $("#btn-add").on("click", function () {
                var purchaseOrder = $("#input-po").val();
                var style = $("#input-style").val();
                var orderType = $("#select-ordertype option:selected").val();
                var poLine = $("#input-poline").val();
                var customer = $("#input-customer").val();

                if (purchaseOrder == "" || style == "" || poLine == "" || customer == "") {
                    alert("All fields are required.");
                }
                else {
                    var obj = {
                        "preId": preId,
                        "purchaseOrder": purchaseOrder.toString(),
                        "style": style.toString(),
                        "orderType": orderType.toString(),
                        "pOLine": poLine,
                        "customer": customer.toString(),
                        "vendor": vendor
                    };

                    $.ajax({
                        type: "POST",
                        url: "/api/bulkposummary/",
                        contentType: 'application/json; charset=utf-8',
                        data: JSON.stringify(obj),
                        dataType: "json",
                        success: function () {
                            alert("Add success!");
                            window.location.reload();
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            bootbox.alert(XMLHttpRequest.responseJSON.exceptionMessage, function () {
                                window.location.reload();
                            });
                        }
                    });
                }
            });

            //打开下载装箱单模板弹窗
            $(".btn-download").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["20%", "20%"],
                    content: $(".iframe-download")
                });
            });

            //打开补货菜单弹窗
            $("#btn-replenishmentmenu").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["20%", "20%"],
                    content: $(".iframe-replenishmentmenu")
                });
            });

            $("#btn-replenishmentlocation").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/generallocmanagement/?vendor=' + vendor);
            });

            $("#btn-replenishmentpo").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/PurchaseOrderManagement/?vendor=' + vendor);
            });

            //打开正常菜单弹窗
            $("#btn-regularmenu").on("click", function () {
                index = layer.open({
                    title: false,
                    type: 1,
                    shadeclose: true,
                    area: ["20%", "20%"],
                    content: $(".iframe-regularmenu")
                });
            });

            //点击replenishment菜单下的分配库位按钮，打开普通库位管理页面
            $("#btn-generalallocate").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/generallocmanagement/?preId=' + preId.toString() + "&vendor=" + vendor);
            });

            //点击replenishment菜单下的订单管理按钮， 打开对应Vendor的订单统计和管理页面
            $("#btn-pomanagement").html(vendor + " PO Management");

            $("#btn-pomanagement").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/PurchaseOrderManagement/?vendor=' + vendor);
            });

            //点击regular菜单下的分配库位按钮，进入分配regular库位页面
            $("#btn-allocate").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/FCRegularLocationAllocating/?preid=' + preId.toString());
            });

            //点击regular菜单下的查看库存按钮，进入库存管理页面
            $("#btn-location").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/FCRegularLocationDetail/?preid=' + preId.toString());
            });

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });
        });
    </script>
}
