
@{
    ViewBag.Title = "FCPurchaseOrderOverview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Third-party Logistics Distribution System</h1>
<h2>Free Country Purchase Order Overview</h2>
<div class="maincontainer">
    <div>
        <input type="button" class="btn btn-default btn-back" value="<< Back" />
    </div>
    <div>
        <input id="btn-report" type="button" class="btn btn-info" value="Generate receiving report" />
        <input id="btn-location" type="button" class="btn btn-info" value="View location distribution" />
    </div>
    <div>
        <table id="table" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>PO</th>
                    <th>Style</th>
                    <th>Order Type</th>
                    <th>PO Line</th>
                    <th>Customer</th>
                    <th>Quantity</th>
                    <th>Received Pcs</th>
                    <th>Cartons</th>
                    <th>Received Ctns</th>
                    <th>Container</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {

            var id = window.location.search.substr(1);
            var preId = window.location.search.substr(1);
            var isReplenishment = false;

            var urlstring = "/api/freecountryinventory/" + id;

            $("#table").DataTable({
                ajax: {
                    url: urlstring,
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "purchaseOrder",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "style",
                        render: function (data) {
                            return "<text>" + data + "</text>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<text>Regular</text>";
                        }
                    },
                    {
                        data: "poLine",
                        render: function (data) {
                            return "<font'>" + data + "</font>";
                        }
                    },
                    {
                        data: "customer",
                        render: function (data) {
                            return "<font color='blue'>" + data + "</font>";
                        }
                    },
                    {
                        data: "quantity",
                        render: function (data) {
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualPcs",
                        render: function (data) {
                            return "<font color='red'>" + data + "</font>";
                        }
                    },
                    {
                        data: "cartons",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "actualCtns",
                        render: function (data) {
                            return "<font color='green'>" + data + "</font>";
                        }
                    },
                    {
                        data: "container",
                        render: function (data) {
                            return "<font color='green'>Unkown</font>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            if (isReplenishment == true)
                            {
                                return "<a href='/ThirdPartyLogistics/CartonDetail/?preid=" + preId + "&po=" + data + "'><button class='btn btn-link'>Receiving</button></a><br>";
                            }
                            else
                            {
                                return "<a href='/ThirdPartyLogistics/fcRegularCartonDetail/?" + data + "'><button class='btn btn-link'>Receiving</button></a><br>";
                            }

                        }
                    }
                ]
            });

            $("#btn-report").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/FCReceivingReport/?' + id.toString());
            });

            $("#btn-location").on("click", function () {
                $(window.location).attr('href', '/ThirdPartyLogistics/RegularLocationDetail/?' + id.toString());
            });

            $(".btn-back").on("click", function () {
                window.history.back(-1);
            });

        });
    </script>
}
