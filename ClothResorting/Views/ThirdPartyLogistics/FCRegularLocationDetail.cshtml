                                        if ((availableCtns == 0 && pickingCtns == 0) || pickingCtns != 0)
                                            return "";
                                        else
                                            return "<button id='" + data + "'class='btn btn-link btn-relocate'>Relocate</button>";
                                    }
                                }
                            ]
                        });
                    },
