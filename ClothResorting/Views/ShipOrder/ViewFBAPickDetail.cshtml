                    success: function (data) {
                        layer.close(index);
                        container = $("#input-inventory-container").val();
                        if (container != "") {
                            GetPickInventoryTable(container, tablePallet, tableCarton);
                            GetPickDetailTable(shipOrderId, table, orderType);
