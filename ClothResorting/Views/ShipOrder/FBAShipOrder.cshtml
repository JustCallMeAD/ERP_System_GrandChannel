                        return "<font>" + data + "</font>";
                    }
                },
                {
                    data: "etsTimeRange",
                    render: function (data) {
                        if (data == null)
                            return "";
                        return "<text>" + data + "</text>";
                    }
                },
                //{
                //    data: "pickDate",
                //    render: function (data) {
                //        if (data == "1969-12-31T16:00:00")
                //            return "<font color='red'>Unpicked</font>"
                //        else
                //            return "<font>" + data.substring(0, 10) + "</font>";
                //    }
                //},
                //{
                //    data: "pickMan",
                //    render: function (data) {
                //        if (data == "Unassigned")
                //            return "<font color='red'>" + data + "</font>";
